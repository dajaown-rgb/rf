<script>
let cart = [];

function startShopping(){
    document.getElementById('welcome').style.display = 'none';
    document.getElementById('shop').style.display = 'block';
}

function addToCart(name, price){
    cart.push({name, price});
    alert(`${name} ØªÙ… Ø¥Ø¶Ø§ÙØªÙ‡Ø§ Ø¥Ù„Ù‰ Ø§Ù„Ø³Ù„Ø©`);
}

function getCartSummary(){
    const summary = {};
    cart.forEach(item=>{
        if(summary[item.name]){
            summary[item.name].count += 1;
            summary[item.name].price += item.price;
        } else {
            summary[item.name] = {count:1, price:item.price};
        }
    });
    return summary;
}

function openCart(){
    document.getElementById('shop').style.display='none';
    document.getElementById('cart-page').style.display='block';
    renderCartPage();
}

function backToShop(){
    document.getElementById('cart-page').style.display='none';
    document.getElementById('shop').style.display='block';
}

function renderCartPage(){
    const cartList=document.getElementById('cart-items');
    const totalPriceEl=document.getElementById('total-price');
    cartList.innerHTML='';
    let total=0;
    const summary=getCartSummary();
    for(const name in summary){
        const item=summary[name];
        const li=document.createElement('li');
        li.textContent=`${name} x${item.count} - ${item.price} Ø¯ÙŠÙ†Ø§Ø±`;
        cartList.appendChild(li);
        total+=item.price;
    }
    totalPriceEl.textContent=`Ø§Ù„Ø¥Ø¬Ù…Ø§Ù„ÙŠ: ${total} Ø¯ÙŠÙ†Ø§Ø±`;
}

// Ø§Ù„Ø´ÙƒÙˆÙ‰
function toggleComplaintBox(){
    const box=document.getElementById('complaint-box');
    box.style.display=(box.style.display==='block')?'none':'block';
}

function sendComplaint(){
    const text=document.getElementById('complaint-text').value.trim();
    if(text){
        window.location.href=`mailto:vampire_shop9@gmail.com?subject=Ø´ÙƒÙˆÙ‰ Ø£Ùˆ Ø§Ù‚ØªØ±Ø§Ø­&body=${encodeURIComponent(text)}`;
        document.getElementById('complaint-text').value='';
